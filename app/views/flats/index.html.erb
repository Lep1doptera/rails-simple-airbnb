<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">All Flats (<%= @flats.length %>)</h2>
    <%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-primary" %>
  </div>
<div class="container my-4">
  <div class="row g-4">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="card h-100 shadow mb-5 bg-white rounded">

          <img class="card-img-top" src="https://via.placeholder.com/100x180" alt="Card image cap">

          <div style="background-color: #e9ecef;" class="p-3">
            <h5 class="card-title mb-2"><%= flat.name %></h5>
            <p class="card-text mb-1"><%= flat.address %></p>
            <p class="mb-0">
              <i class="fa-solid fa-user-group"></i> <%= flat.number_of_guests %>
              &nbsp;&nbsp;
              <i class="fa-solid fa-dollar-sign"></i> <%= flat.price_per_night %>
            </p>
          </div>


          <hr class="m-0">


          <div class="card-body p-2">
            <%= link_to "More Info", flat_path(flat), class: "btn btn-primary btn-sm me-1" %>

            <a href="#" class="btn btn-secondary btn-sm me-1">Edit</a>
            <a href="#" class="btn btn-danger btn-sm">Remove</a>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
