<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">All Flats (<%= @flats.length %>)</h2>
    <div class="mb-4">
  <%= form_with url: flats_path, method: :get, local: true do %>
    <div class="input-group">
      <%= text_field_tag :query, params[:query], placeholder: "Search flats...", class: "form-control" %>
      <button type="submit" class="btn btn-outline-secondary">Search</button>
    </div>
  <% end %>
</div>
    <%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-primary" %>
  </div>
<div class="container my-4">
  <div class="row g-4">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="card h-100 shadow mb-2 bg-white rounded">

          <%= image_tag "original.jpeg", class: "card-img-top", style: "object-fit: cover; height: 100px;" %>
          <div style="background-color: #e9ecef;" class="p-3">
            <h5 class="card-title mb-2"><%= flat.name %></h5>
            <p class="card-text mb-1"><%= flat.address %></p>
            <p class="mb-0">
              <i class="fa-solid fa-user-group"></i> <%= flat.number_of_guests %>
              &nbsp;&nbsp;
              <i class="fa-solid fa-dollar-sign"></i> <%= flat.price_per_night %>
            </p>
          </div>


          <hr class="m-0">


          <div class="card-body p-2">
            <%= link_to "More Info", flat_path(flat), class: "btn btn-primary btn-sm me-1" %>

            <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-secondary btn-sm me-1"%>

            <%= link_to "Delete", flat_path(flat),
                                  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} , class: "btn btn-danger btn-sm" %>
          </div>

        </div>

      </div>
    <% end %>
  </div>
</div>
